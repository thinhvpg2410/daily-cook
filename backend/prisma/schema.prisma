generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  phone           String   @unique
  passwordHash    String?
  name            String?
  avatarUrl       String?
  googleId        String?  @unique
  dob             DateTime?
  isTwoFAEnabled  Boolean  @default(false)
  twoFASecret     String?
  role            Role     @default(USER)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  recipes         Recipe[]        @relation("UserRecipes")
  mealPlans       MealPlan[]      @relation("UserMealPlans")
  shoppingLists   ShoppingList[]

  @@index([createdAt])
}

model Ingredient {
  id        String   @id @default(cuid())
  name      String   @unique
  unit      String?
  kcal      Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipeItems RecipeIngredient[]

  @@index([name])
}

model Recipe {
  id          String   @id @default(cuid())
  authorId    String?
  title       String
  description String?
  steps       Json
  tags        String[]          // ["Breakfast","Soup",...]
  image       String?
  cookTime    Int?              // phút
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User?    @relation("UserRecipes", fields: [authorId], references: [id], onDelete: SetNull)
  items       RecipeIngredient[]

  @@index([createdAt])
  @@index([cookTime])
  @@index([likes])
}

model RecipeIngredient {
  id           String     @id @default(cuid())
  recipeId     String
  ingredientId String
  amount       Float
  unitOverride String?

  recipe     Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Restrict)

  @@unique([recipeId, ingredientId])  // 1 nguyên liệu 1 lần/recipe
}

model MealPlan {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime // ngày áp dụng
  slots     Json     // { breakfast: recipeId[], lunch: [], dinner: [] }
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation("UserMealPlans", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model ShoppingList {
  id        String   @id @default(cuid())
  userId    String
  title     String
  items     Json     // [{ingredientId, name, qty, unit, checked}]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
