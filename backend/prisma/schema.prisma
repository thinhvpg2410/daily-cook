generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String?
  name          String?
  avatarUrl     String?
  googleId      String?  @unique
  isTwoFAEnabled Boolean  @default(false)
  twoFASecret   String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  recipes       Recipe[]        @relation("UserRecipes")
  mealPlans     MealPlan[]      @relation("UserMealPlans")
  shoppingLists ShoppingList[]
}

model Ingredient {
  id        String   @id @default(cuid())
  name      String
  unit      String?  // g, ml, cái...
  kcal      Float?   // năng lượng/100g
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipeItems RecipeIngredient[]
}

model Recipe {
  id        String   @id @default(cuid())
  authorId  String
  title     String
  description String?
  steps     Json     // mảng step
  tags      String[] // ["ăn sáng","eat-clean"]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author    User     @relation("UserRecipes", fields: [authorId], references: [id])
  items     RecipeIngredient[]
}

model RecipeIngredient {
  id           String     @id @default(cuid())
  recipeId     String
  ingredientId String
  amount       Float
  unitOverride String?

  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@unique([recipeId, ingredientId])
}

model MealPlan {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime // ngày áp dụng (có thể dùng tuần)
  slots     Json     // { breakfast: recipeId[], lunch: [], dinner: [] }
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation("UserMealPlans", fields: [userId], references: [id])
}

model ShoppingList {
  id        String   @id @default(cuid())
  userId    String
  title     String
  items     Json     // [{ingredientId, name, qty, unit, checked}]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}
